<!--index.wxml-->
<view class="container">
  <view class="mainshow" data-statu="open">
    <view class='addtask'>
      <button bindtap='addtaskbutton' class='addtaskclass' >+</button>
      <block wx:for="{{tasks_doing}}">
        <view>
        <button bindtap='enterdetail' class='task'>
          <text>
            {{item}}
          </text>
        </button>
        </view>
      </block>
      <button class='task'>
        <text>
          我爱你，亲爱的姑娘
        </text>
      </button>
    </view>
  </view>

  <!--mask-->
  <view class="drawer_screen" bindtap="powerDrawer" data-statu="close" wx:if="{{showModalStatus}}"></view>
  <!--content-->
  <!--使用animation属性指定需要执行的动画-->
  <view animation="{{animationData}}" class="drawer_box" wx:if="{{showModalStatus}}">
 
    <!--drawer content-->
    <view class="drawer_title">选文件</view>
    <view class="drawer_content">
      <view class="top grid">
        <label class="title col-0">手机栏标题</label>
        <input class="input_base input_h30 col-1" name="rName" value="可自行定义内容"></input>
      </view>
      <view class="top grid">
        <label class="title col-0">用户名栏标题</label>
        <input class="input_base input_h30 col-1" name="mobile" value="110"></input>
      </view>
    </view>
    <view class="btn_ok" bindtap="powerDrawer" data-statu="close">确定</view>
  </view>
</view>
